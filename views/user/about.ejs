    </div>
</div>

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <!-- Hero Section using product image -->
            <div class="position-relative mb-5">
                <div class="hero-section rounded">
                    <div class="hero-content text-center">
                        <h1 class="text-white display-4 font-weight-bold mb-3 animate__animated animate__fadeInDown">
                            About DentKart
                        </h1>
                        <p class="text-white lead mb-0 animate__animated animate__fadeInUp">
                            Your Trusted Source for Quality Dental Equipment
                        </p>
                    </div>
                </div>
            </div>

            <!-- Mission Statement with Product Image -->
            <div class="row align-items-center mb-5">
                <div class="col-lg-6 pr-lg-5 mb-5 mb-lg-0">
                    <div class="section-content wow fadeInLeft">
                        <h2 class="position-relative mb-4">Our Mission</h2>
                        <p class="text-muted">
                            At DentKart, we are committed to revolutionizing dental care by providing cutting-edge equipment 
                            and supplies. Our mission is to empower dental professionals with innovative solutions that 
                            enhance patient care and streamline dental practices.
                        </p>
                        <ul class="list-unstyled mission-list">
                            <li class="mb-3 wow fadeInLeft" data-wow-delay="0.2s">
                                <i class="fas fa-check text-primary mr-2"></i>
                                Premium Quality Products
                            </li>
                            <li class="mb-3 wow fadeInLeft" data-wow-delay="0.3s">
                                <i class="fas fa-check text-primary mr-2"></i>
                                Competitive Pricing
                            </li>
                            <li class="mb-3 wow fadeInLeft" data-wow-delay="0.4s">
                                <i class="fas fa-check text-primary mr-2"></i>
                                Expert Customer Support
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mission-image-container wow fadeInRight">
                        <!-- Use first product image with proper error handling -->
                        <% if (products && products.length > 0 && products[0].images && products[0].images.length > 0) { %>
                            <img src="<%= products[0].images[0] %>" alt="Our Mission" class="img-fluid rounded shadow-lg">
                        <% } else { %>
                            <img src="/img/product-placeholder.jpg" alt="Our Mission" class="img-fluid rounded shadow-lg">
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Why Choose Us -->
            <div class="bg-light rounded p-5 mb-5">
                <h2 class="text-center position-relative mb-5">Why Choose DentKart?</h2>
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="feature-card wow fadeInUp" data-wow-delay="0.1s">
                            <div class="icon-wrapper">
                                <i class="fas fa-certificate"></i>
                            </div>
                            <h4>Quality Assurance</h4>
                            <p>Every product undergoes rigorous quality testing to meet international standards.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="feature-card wow fadeInUp" data-wow-delay="0.2s">
                            <div class="icon-wrapper">
                                <i class="fas fa-shipping-fast"></i>
                            </div>
                            <h4>Fast Delivery</h4>
                            <p>Swift and secure delivery through our efficient logistics network.</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="feature-card wow fadeInUp" data-wow-delay="0.3s">
                            <div class="icon-wrapper">
                                <i class="fas fa-headset"></i>
                            </div>
                            <h4>Expert Support</h4>
                            <p>24/7 dedicated support team to assist with all your queries.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Categories using actual categories -->
            <div class="mb-5">
                <h2 class="text-center position-relative mb-5">Our Product Range</h2>
                <div class="row">
                    <% if (categories && categories.length > 0) { %>
                        <% categories.slice(0, 4).forEach((category, index) => { %>
                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="category-card wow fadeInUp" data-wow-delay="0.<%= index + 1 %>s">
                                    <div class="image-wrapper">
                                        <% 
                                            const categoryProduct = products && products.length > 0 ? 
                                                products.find(p => p.category && p.category._id && 
                                                    p.category._id.toString() === category._id.toString()) : null;
                                            const productImage = categoryProduct && categoryProduct.images && 
                                                categoryProduct.images.length > 0 ? categoryProduct.images[0] : '/img/product-placeholder.jpg';
                                        %>
                                        <img src="<%= productImage %>" alt="<%= category.name %>">
                                    </div>
                                    <div class="content">
                                        <h5><%= category.name %></h5>
                                        <p>Quality dental solutions for professionals</p>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), 
                    url('<%= products && products.length > 0 && products[0].images && products[0].images.length > 0 ? products[0].images[0] : "/img/product-placeholder.jpg" %>') center/cover no-repeat;
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: 3rem;
    }

    /* Mission Section */
    .mission-image-container {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
    }

    .mission-image-container img {
        transition: transform 0.5s ease;
    }

    .mission-image-container:hover img {
        transform: scale(1.05);
    }

    /* Feature Cards */
    .feature-card {
        background: #fff;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
        transition: all 0.3s ease;
        height: 100%;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    /* Category Cards */
    .category-card {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        height: 100%;
    }

    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .image-wrapper {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .category-card:hover .image-wrapper img {
        transform: scale(1.1);
    }

    /* Animations */
    .animate__animated {
        animation-duration: 1s;
    }

    .wow {
        visibility: hidden;
    }

    /* Hero Slider Styles */
    .hero-slider {
        position: relative;
        height: 700px;
        overflow: hidden;
    }

    .hero-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 1s ease-in-out;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4));
    }

    .hero-slide.active {
        opacity: 1;
    }

    .separator {
        width: 80px;
        height: 3px;
        background-color: var(--primary);
        position: relative;
    }

    .separator::before,
    .separator::after {
        content: '';
        position: absolute;
        width: 10px;
        height: 10px;
        background-color: var(--primary);
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
    }

    .separator::before {
        left: -15px;
    }

    .separator::after {
        right: -15px;
    }

    /* Counter Card Styles */
    .counter-card {
        background: #fff;
        padding: 2.5rem;
        border-radius: 20px;
        text-align: center;
        transition: all 0.4s ease;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        height: 100%;
    }

    .counter-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: rgba(var(--primary-rgb), 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        transition: all 0.4s ease;
    }

    .counter-card:hover .icon-circle {
        background: var(--primary);
    }

    .counter-card:hover .icon-circle i {
        color: #fff !important;
        transform: scale(1.2);
    }

    .counter {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(45deg, var(--primary), #2c3e50);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    /* Section Title Style */
    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 3rem;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 3px;
        background: var(--primary);
    }

    /* Button Enhancement */
    .btn-primary {
        border-radius: 50px;
        padding: 12px 30px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.4s ease;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize WOW.js with enhanced options
        new WOW({
            boxClass: 'wow',
            animateClass: 'animate__animated',
            offset: 100,
            mobile: true,
            live: true
        }).init();

        // Enhanced Hero Slider
        const slides = document.querySelectorAll('.hero-slide');
        let currentSlide = 0;

        function nextSlide() {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
            updateSlideAnimation(slides[currentSlide]);
        }

        function updateSlideAnimation(slide) {
            const content = slide.querySelector('.hero-content > div');
            content.style.opacity = '0';
            content.classList.remove('animate__fadeInDown');
            setTimeout(() => {
                content.style.opacity = '1';
                content.classList.add('animate__fadeInDown');
            }, 50);
        }

        setInterval(nextSlide, 5000);

        // Enhanced Counter Animation
        const counters = document.querySelectorAll('.counter');
        
        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-target'));
            const duration = 2000;
            const step = target / (duration / 16);
            let current = 0;

            const observer = new IntersectionObserver((entries) => {
                if (entries[0].isIntersecting) {
                    animateCounter();
                    observer.unobserve(counter);
                }
            });

            function animateCounter() {
                current += step;
                if (current < target) {
                    counter.textContent = Math.round(current);
                    requestAnimationFrame(animateCounter);
                } else {
                    counter.textContent = target;
                }
            }

            observer.observe(counter);
        });

        // Image error handling
        document.querySelectorAll('img').forEach(img => {
            img.onerror = function() {
                this.src = '/img/product-placeholder.jpg';
            }
        });
    });
</script>

