    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/"><i class="fas fa-home mr-2"></i>Home</a>
                <span class="breadcrumb-item active"><i class="fas fa-info-circle mr-2"></i>About Us</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Dynamic Hero Slider -->
<div class="container-fluid mb-5">
    <div class="row px-xl-5">
        <div class="col-12">
            <div class="hero-slider position-relative">
                <div class="hero-slide active" style="background-image: url('/img/carousel-2.jpg')">
                    <div class="hero-overlay"></div>
                    <div class="hero-content text-center">
                        <div class="animate__animated animate__fadeInDown">
                            <h1 class="text-white display-3 font-weight-bold mb-4">
                                Welcome to DentKart
                            </h1>
                            <div class="separator mx-auto mb-4"></div>
                            <p class="text-white lead mb-5 px-4">
                                Revolutionizing Dental Care with Premium Equipment & Innovation
                            </p>
