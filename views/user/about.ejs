    <div class="row px-xl-5">
        <div class="col-12 text-center mb-5">
            <h2 class="section-title position-relative mb-5">Our Achievements</h2>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="counter-card wow fadeInUp" data-wow-delay="0.1s">
                <div class="icon-circle mb-4">
                    <i class="fas fa-users fa-2x text-primary"></i>
                </div>
                <h2 class="counter mb-3" data-target="1000">0</h2>
                <p class="text-muted mb-0">Happy Customers</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="counter-card wow fadeInUp" data-wow-delay="0.2s">
                <div class="icon-circle mb-4">
                    <i class="fas fa-box fa-2x text-primary"></i>
                </div>
                <h2 class="counter mb-3" data-target="500">0</h2>
                <p class="text-muted mb-0">Products Available</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="counter-card wow fadeInUp" data-wow-delay="0.3s">
                <div class="icon-circle mb-4">
                    <i class="fas fa-trophy fa-2x text-primary"></i>
                </div>
                <h2 class="counter mb-3" data-target="50">0</h2>
                <p class="text-muted mb-0">Awards Won</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="counter-card wow fadeInUp" data-wow-delay="0.4s">
                <div class="icon-circle mb-4">
                    <i class="fas fa-globe fa-2x text-primary"></i>
                </div>
                <h2 class="counter mb-3" data-target="20">0</h2>
