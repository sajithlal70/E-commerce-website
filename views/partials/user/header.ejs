            // Enhanced Cart and Wishlist count update function
            async function updateCounts() {
                try {
                    const cartResponse = await fetch('/api/cart/count');
                    const wishlistResponse = await fetch('/api/wishlist/count');
                    const cartDetailsResponse = await fetch('/cart/details');
                    
                    if (cartResponse.ok && wishlistResponse.ok && cartDetailsResponse.ok) {
                        const cartData = await cartResponse.json();
                        const wishlistData = await wishlistResponse.json();
                        const cartDetails = await cartDetailsResponse.json();
                        
                        const cartCount = document.getElementById('cartCount');
                        const wishlistCount = document.getElementById('wishlistCount');
                        const cartAmount = document.getElementById('cartAmount');
                        
                        if (cartCount) {
                            cartCount.textContent = cartData.count || '0';
                            if (cartData.count > 0) {
                                cartCount.classList.add('notification-badge');
                            }
                        }
                        
                        if (wishlistCount) {
                            wishlistCount.textContent = wishlistData.count || '0';
                            if (wishlistData.count > 0) {
                                wishlistCount.classList.add('notification-badge');
                            }
                        }

                        if (cartAmount) {
                            cartAmount.textContent = `₹${cartDetails.total || '0'}`;
                        }
                    }
                } catch (error) {
                    console.error('Error updating counts:', error);
                }
            }

            // Update counts on page load
            updateCounts();

            // Update counts every 30 seconds
            setInterval(updateCounts, 30000);

            // Enhanced search functionality
            const searchInput = document.querySelector('input[name="search"]');
            if (searchInput) {
                searchInput.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

