<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dental Shop Admin Login</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 via-blue-100 to-blue-200">
    <!-- Decorative Elements -->
    <div class="fixed top-0 right-0 w-96 h-96 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
    <div class="fixed bottom-0 left-0 w-96 h-96 bg-white/10 rounded-full translate-y-1/2 -translate-x-1/2"></div>

    <!-- Navigation Bar -->
    <nav class="fixed top-0 w-full bg-white shadow-lg z-50">
        <div class="container mx-auto px-6 py-4">
            <div class="flex items-center">
                <div class="flex items-center">
                    <span class="bg-gray-800 text-yellow-300 px-3 py-1 text-2xl font-bold">DENT</span>
                    <span class="bg-yellow-300 text-gray-800 px-3 py-1 text-2xl font-bold">CART</span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Login Container -->
    <div class="min-h-screen flex items-center justify-center px-4 pt-20">
        <div class="w-full max-w-md bg-white/95 rounded-2xl shadow-xl backdrop-blur-sm p-8 space-y-6">
            <!-- Login Header -->
            <div class="text-center">
                <i class="fas fa-tooth text-5xl text-yellow-400 mb-4"></i>
                <h2 class="text-2xl font-semibold text-gray-800">Admin Login</h2>
            </div>

            <!-- Error Message -->
            <% if (message) { %>
                <p class="text-red-500 text-center"><%= message %></p>
            <% } %>

            <!-- Login Form -->
            <form method="post" action="/admin/login" class="space-y-6">
                <!-- Username Input -->
                <div class="space-y-2">
                    <label for="username" class="block text-sm font-medium text-gray-700">
                        Username
                    </label>
                    <div class="relative">
                        <input type="text" 
                               id="username" 
                               name="email" 
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-300 focus:border-yellow-300 transition-all"
                               placeholder="Enter your username">
                        <i class="fas fa-user absolute right-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    </div>
                </div>

                <!-- Password Input -->
                <div class="space-y-2">
                    <label for="password" class="block text-sm font-medium text-gray-700">
                        Password
                    </label>
                    <div class="relative">
                        <input type="password" 
                               id="password" 
                               name="password" 
                               class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-300 focus:border-yellow-300 transition-all"
                               placeholder="Enter your password">
                        <i class="fas fa-lock absolute right-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    </div>
                </div>

                <!-- Forgot Password Link -->
                <div class="text-right">
                    <a href="#" class="text-sm text-gray-600 hover:text-yellow-500 transition-colors">
                        Forgot Password?
                    </a>
                </div>

                <!-- Login Button -->
                <button type="submit" 
                        class="w-full bg-gray-800 text-white py-3 px-4 rounded-lg hover:bg-gray-700 focus:ring-2 focus:ring-gray-300 transition-all flex items-center justify-center gap-2">
                    <i class="fas fa-sign-in-alt"></i>
                    Login
                </button>
            </form>
        </div>
    </div>
</body>
</html>